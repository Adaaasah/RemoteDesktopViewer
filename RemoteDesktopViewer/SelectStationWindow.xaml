<Controls:MetroWindow
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="RemoteDesktopViewer.SelectStationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Station Selector" Height="140" Width="250" MinHeight="130" MinWidth="140" MaxHeight="140" MaxWidth="300"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        
        <StackPanel  Orientation="Vertical" Margin="5,5,5,5">
            <ComboBox Name="StationList" Height="40">

            </ComboBox>
        </StackPanel>
    

        <Button Grid.Row="2" Name="Action" Content="Edit" Click="Click_Action" Margin="5,10,125,5"/>
        <Button Grid.Row="2" Content="Cancel" Click="Click_Cancel"  Margin="125,10,5,5"/>
    </Grid>
</Controls:MetroWindow>